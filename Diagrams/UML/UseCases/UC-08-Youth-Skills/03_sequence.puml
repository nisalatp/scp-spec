@startuml UC-08_Sequence
title UC-08: Youth Skills Matching (Sequence)

autoactivate on
actor "Case Worker" as Worker
participant "Security" as Sec
participant "Vertical: SocProt" as SocProt
participant "Vertical: Edu" as Edu
participant "Analytics" as Analysis

Worker -> Sec: ValidateAccess(GeoScope)
return Authorized

Worker -> SocProt: GetUnemployedYouth(LocalArea)
return YouthList[]

Worker -> Analysis: MatchSkills(YouthList)
    Analysis -> Edu: GetQualifications(YouthList)
    return QualMap
    Analysis -> Analysis: MatchToVacancies(QualMap)
    return MatchResults
return Display(MatchResults)

@enduml
