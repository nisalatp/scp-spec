@startuml
package "Form Builder System" {
    [Form Designer UI] as UI
    [Schema Registry] as Schema
    [Form Renderer] as Renderer
    [Validation Engine] as Val
    [Policy Engine] as Policy
    [Submission API] as API
}

database "Form Metadata" as DB_Meta
database "Data Store" as DB_Data

UI -> Schema : "Save Definition"
Schema -> DB_Meta
Renderer -> Schema : "Load Definition"
Renderer -> Val : "Validate Input"
Renderer -> API : "Submit Data"
API -> Policy : "Check Permissions"
API -> DB_Data : "Persist"
@enduml
