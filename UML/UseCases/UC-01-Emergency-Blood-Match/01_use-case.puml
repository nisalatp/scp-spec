left to right direction

actor "Community Hospital" as Hospital
actor "Potential Donor" as Donor

package "SCP Core" {
    usecase "Search for O-Neg Donors" as UC_Search
    usecase "Filter by Radius" as UC_Filter
    usecase "Check Consent" as UC_Consent
}

package "Vertical: Health & Env" <<standard-vertical>> {
    usecase "Access Blood Group Data" as UC_Blood
    usecase "Dispatch Emergency Alert" as UC_Alert
}

Hospital --> UC_Search
UC_Search ..> UC_Filter : include
UC_Search ..> UC_Blood : include
UC_Search ..> UC_Consent : include

UC_Alert --> Donor : "SMS/Push"

@enduml
