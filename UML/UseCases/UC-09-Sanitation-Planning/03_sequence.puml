@startuml
title UC-09: Sanitation Infrastructure Planning (Sequence)
autoactivate on
actor Org
participant "Geo-Vertical: WASH" as WASH
participant "Vertical: Health" as Health
participant "Vertical: Finance" as Fin
Org -> WASH: IdentifyTargets()
    WASH -> WASH: FindNoToilet()
    return ListA
    WASH -> Health: CheckDiseaseHistory(ListA)
    return RiskScores
    WASH -> WASH: Rank(ListA, RiskScores)
    return PriorityList
return Approve
Org -> Fin: ReleaseFunds(PriorityList)
    Fin -> Fin: CreateGrant()
return Success
@enduml
